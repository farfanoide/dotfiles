# -*- mode: zsh -*-
# vi: set ft=zsh :

# Go to the repository directory and start the session
cd "$srcdir/$session"
new_session -n 'Editor' vim

editor_window=1 # this will be our editor window
# send_keys $editor_window :NERDTreeToggle Enter # tell vim to open Nerdtree

general_window=2
new_window -n General
split $general_window -h
send_keys $general_window.1 'git status -bs' 'Enter'
# # new_window -n General git status -bs
# new_window -a -n edit 'git status -bs' # Create a new window named "edit" running emacs
# # Create a second window with a vim file browser open
#
# # Create 20% split at bottom of window 2 and run Django shell in it
# send_keys 2.2 "workon $session" "Enter"
# send_keys 2.2 "python manage.py shell" "Enter"
#
# # Select pane 1 in window 2
select_window $editor_window
